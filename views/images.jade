extends application

block page

  if imageList.length > 0

    .image-stats-graph
      span.image-stats-bar.image-stats-pass(style='width: #{passImagePercentage}%')= passImageCount
      span.image-stats-bar.image-stats-fail(style='width: #{failImagePercentage}%')= failImageCount

    ul.image-cards
      each image in imageList
        if image.kind == 'pass'
          - imageItemClass = 'image-card-pass'
        else
          - imageItemClass = 'image-card-fail'
        li(id='#{image.id}', class='image-card #{imageItemClass}')
          a(href='#{image.imageUrl}')
            img.image-thumbnail(src='#{image.thumbnailUrl}', alt='')
          if !deleted
            ul.image-settings
              if image.kind == 'pass'
                li: .is-pass: span.icon.icon-thumbs-up
                li: a.js-change-image-kind(href='#', class='is-fail'): span.icon.icon-thumbs-o-down
              else
                li: a.js-change-image-kind(href='#', class='is-pass'): span.icon.icon-thumbs-o-up
                li: .is-fail: span.icon.icon-thumbs-down
              li: a.js-delete-image(href='#'): span.icon.icon-trash-o

  else

    h2 It looks like no images have been added to Flubr yet.

    h2 You can start adding images&nbsp;
      a(href='/addimage') here
      | .