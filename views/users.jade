extends application

block page

  form#js-add-user
    ul.inline-list
      li
        label
          | Twitter Username:
          input#username(type='text')
      li
        button(type='submit') Add User

  table.user-table
    columns
      col.col-avatar
      col.col-name
      col.col-username
      col.col-dateAdded
      col.col-deleteUser
    thead
      tr
        th &nbsp;
        th Name
        th Username
        th Date added
        th &nbsp;
    each user in userList
      tr
        td
          img.avatar(src='#{user.avatar}', alt='avatar image')
        td= user.name
        td= user.twitterHandle
        td= user.dateAdded
        td.align-right
          button.delete-user(id='#{user.id}') Delete user