extends layout

block content

  main(role='main')

    ul.logged-in-bar
      li Flubr
      li
        img.avatar(src='#{user.avatar}')
      li #{user.displayName}
        small &nbsp;(#{user.userName})
      li
        a(href='/logout') Sign out

    #messaging.messaging

    h2 Add new image

    .addNewImage

      form#js-add-image
        ul.inline-list
          li
            label
              | Image Url:
              input#imageUrl(type='text')
          li
            label.is-inline
              | Pass:
              input(type='radio' name='kind' value='pass')
            label.is-inline
              | Fail:
              input(type='radio' name='kind' value='fail' checked='checked')
          li
            button(type='submit') Add

    h2 View images

    button#js-show-images Show images

    ul.image-list#js-image-list