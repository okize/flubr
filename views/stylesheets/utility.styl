.nav-inset-shadow-left
  box-shadow: inset -5px -5px 15px rgba($navShadowColor, .15)

.nav-inset-shadow-right
  box-shadow: inset 5px -5px 15px rgba($navShadowColor, .15)

.nav-active-drop-shadow
  box-shadow: 5px 5px 15px rgba($navShadowColor, .15)

.flag
  display: table
  width: 100%

.flag-image, .flag-body
  display: table-cell
  vertical-align: middle
  .flag-top &
    vertical-align: top
  .flag-bottom &
    vertical-align: bottom

.flag-image
  padding-right: 10px

  > img
    display: block
    max-width: none

  .flag-rev &
    padding-right: 0
    padding-left: 10px

.flag-body
  width: 100%

.hidden
  display: none

.inline-list
  list-style: none
  li, label
    display: inline-block

.align-right
  text-align: right !important

.align-left
  text-align: left !important

.switch-toggle
  height: $toggleSwitchHeight
  position: relative
  background: $toggleSwitchBgColor
  label
    color: #fff
    line-height: $toggleSwitchHeight
    vertical-align: middle
  a
    display: block
    transition: all $toggleSwitchSpeed ease-out
    position: absolute
    top: 0
    left: 0
    padding: 0
    z-index: 1
    width: 50%
    height: 100%
    background: $toggleSwitchActiveBgColor
    box-shadow: inset rgba(255, 255, 255, 0.2) 0 1px 0, inset rgba(0, 0, 0, 0.3) 0 -1px 0
  input
    position: absolute
    opacity: 0
    & + label
      position: relative
      z-index: 2
      float: left
      width: 50%
      height: 100%
      margin: 0
      text-align: center
    &:last-of-type
      &:checked
        & ~ a
          left 50%
    &:focus + label
      outline: 1px dotted #888
