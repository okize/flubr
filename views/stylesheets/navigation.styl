.site-navigation

.logged-in-bar
  color: #000
  line-height: 2rem
  vertical-align: middle
  position: fixed
  margin: 0
  width: 100%
  top: 0
  left: 0
  text-align: right
  background-color: $yellow
  padding: 5px
  border-bottom: 5px solid $yellowDark
  li
    list-style: none
    display: inline-block
    margin-right: 10px
    &:first-child
      float: left

.avatar
  vertical-align: bottom
  border: 2px solid $imageBg
  height: 30px
  width: 30px