.app-navigation
  @extend .nav-inset-shadow-left
  background: $navBgColor

.navigation-logo
  line-height: 2
  background: $flubr
  color: $flubrText
  text-align: center
  text-transform: uppercase
  font-size: 2.5rem
  +from($medium-up)
    @extend .nav-inset-shadow-left
    line-height: 10rem
    height: 10rem

.navigation-links
  margin: 0
  padding: 0
  list-style: none
  +from($medium-up)
    display: block

.nav-icon
  float: left
  font-size: 2rem

.nav-link
  text-decoration: none

.nav-text, .nav-text:visited
  text-align: right
  color: $navLinkColor
  padding: 1rem
  display: block
  text-transform: uppercase
  font-size: 1rem
  border-bottom: .1rem solid $navLinkBorderColor
  &:hover
    color: $navLinkHoverColor
    background: $navLinkHoverBgColor
  +from($medium-up)
    display: block

.nav-active
  overflow: hidden
  margin-bottom: -15px
  padding: 0 0 15px 0
  .nav-text
    display: block
    @extend .nav-active-drop-shadow
  .nav-text, .nav-text:hover
    background: $navLinkActiveBgColor
    color: $navLinkActiveColor
    cursor: default