.app-navigation
  background: $navBgColorBottom linear-gradient(to bottom, $navBgColorTop, $navBgColorBottom) repeat-x

.navigation-logo
  background-color: $flubr
  color: $flubrText
  height: 10rem
  text-align: center
  text-transform: uppercase
  padding-top: 4rem
  font-size: 2.5rem

.navigation-user
  background-color: $navUserBgColor
  color: $navUserColor
  padding: 1rem
  .avatar
    margin-right: 1rem

.navigation-links
  margin: 0
  padding: 0
  list-style: none
  a
    color: $navLinkColor
    padding: 1rem
    display: block
    text-decoration: none
    text-transform: uppercase
    font-size: 1rem
    border-bottom: .1rem solid $navLinkBorderColor
.active
  a
    background-color: $navLinkActiveBgColor
    color: $navLinkActiveColor