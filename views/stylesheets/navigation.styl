@import 'variables'
@import 'mixins'

.app-navigation
  @extend .nav-inset-shadow-left
  background-color: $navBgColor

.navigation-logo
  @extend .nav-inset-shadow-left
  background-color: $flubr
  color: $flubrText
  height: 10rem
  text-align: center
  text-transform: uppercase
  padding-top: 4rem
  font-size: 2.5rem

.navigation-user
  @extend .nav-inset-shadow-left
  background-color: $navUserBgColor
  color: $navUserColor
  padding: 1rem
  .avatar
    margin-right: 1rem

.navigation-links
  // display: none
  margin: 0
  padding: 0
  list-style: none
  a, &:visited
    color: $navLinkColor
    padding: 1rem
    display: block
    text-decoration: none
    text-transform: uppercase
    font-size: 1rem
    border-bottom: .1rem solid $navLinkBorderColor
    &:hover
      color: $navLinkHoverColor
      background-color: $navLinkHoverBgColor
  .active
    overflow: hidden
    margin-bottom: -15px
    padding: 0 0 15px 0
    a
      display: block
      @extend .nav-drop-shadow
    a, a:hover
      background-color: $navLinkActiveBgColor
      color: $navLinkActiveColor
      cursor: default
