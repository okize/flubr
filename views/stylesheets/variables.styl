// COLORS
$flubr = #85d10d
$flubrDark = #659E0A
$pass = #2ECC40
$fail = #FF4136

// HOMEPAGE
$homepageBgColorTop = #fafafa
$homepageBgColorBottom = #aaa

// RESPONSIVE
$medium-up = 769px

// APPLICATION
$appBodyColor = #333
$appBodyBgColor = #f8f8f8
$appFontFamily = Futura, "Trebuchet MS", Arial, sans-serif

// NAVIGATION
$navigationWidth = 16rem
$navBgColor = #d3d3d3
$navShadowColor = #333
$navLinkBorderColor = #fafafa
$navLinkColor = #333
$navLinkBgColor = #efefef
$navLinkHoverBgColor = $flubrDark
$navLinkHoverColor = #fff
$navLinkIconHoverColor = $navLinkHoverColor
$navLinkActiveColor = #333
$navLinkActiveBgColor = $appBodyBgColor

// MESSAGING
$appMessagingWidth = 16rem
$appMessagingBgColor = $navBgColor

// FONT ICONS
$fa-font-color = $flubrDark
$fa-css-prefix = icon
$fa-version = '4.1.0'
$fa-border-color = #eee
$fa-inverse = #fff
$fa-li-width = (30em / 14)

// TABLES
$tableHeadBgColor = $flubrDark
$tableHeadColor = #fafafa
$tableRowBorderColor = #ddd
$tableBorderedColor = #ccc
$tableStripedOddColor = #fafafa
$tableStripedEvenColor = #f5f5f5

// FLASH MESSAGES
$flashBgColorNotice = #0074d9
$flashBgColorError = $fail
$flashBgColorWarning = #f39c12
$flashBgColorSuccess = $pass

// CARDS
$imageCardBgColor = #fff
$imageCardBorderColor = #ccc

// TOGGLE
$toggleSwitchHeight = 2rem
$toggleSwitchBgColor = #333
$toggleSwitchActiveBgColor = #deca03
$toggleSwitchSpeed = 0.1s