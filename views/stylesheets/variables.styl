// FONTS
$fontRegular = 'Lato-Regular', 'Trebuchet MS', Arial, sans-serif
$fontLight = 'Lato-Hairline', 'Trebuchet MS', Arial, sans-serif
$fontBold = 'Lato-Heavy', 'Trebuchet MS', Arial, sans-serif

// COLORS
$flubr = #85d10d
$passColor = #4bae4f
$failColor = #f34235

$primaryColor = #8BC34A
$darkPrimaryColor = #689F38
$lightPrimaryColor = #DCEDC8
$textPrimaryColor = #212121
$accentColor = #FFC107
$primaryTextColor = #212121
$secondaryTextColor = #727272
$textOnColor = #fff
$dividerColor = #B6B6B6
$progressBarBackgroundColor = rgba(0,0,0,0)
$progressBarMeterColor = rgba($accentColor,.75)

// GLOBAL
$appBodyBgColor = #f8f8f8

// LINKS
$linkColor = #fff
$linkVisitedColor = $secondaryTextColor

// HOMEPAGE
$homepageBgColorTop = #fafafa
$homepageBgColorBottom = #aaa
$homepageTextShadowColor = #fff
$homepageLoginButtonColor = #fff
$homepageLoginButtonBgColor = #02a8f3
$homepageImageWidth = 18rem
$homepageImageHeight = 12rem

// RESPONSIVE
$medium-up = 769px

// NAVIGATION
$navigationWidth = 16rem
$navBgColor = #d3d3d3
$navShadowColor = #333
$navLinkBorderColor = #fafafa
$navLinkColor = #333
$navLinkBgColor = #efefef
$navLinkHoverBgColor = $darkPrimaryColor
$navLinkHoverColor = #fff
$navLinkIconHoverColor = $navLinkHoverColor
$navLinkActiveColor = #333
$navLinkActiveBgColor = $appBodyBgColor

// MESSAGING
$appMessagingWidth = 16rem
$appMessagingBgColor = $navBgColor

// FONT ICONS
$fa-font-color = $darkPrimaryColor
$fa-css-prefix = icon
$fa-version = '4.1.0'
$fa-border-color = #eee
$fa-inverse = #fff
$fa-li-width = (30em / 14)

// TABLES
$tableBgColor = #ccc
$tableHeadBgColor = $darkPrimaryColor
$tableHeadColor = #fafafa
$tableHeadBorderColor = darken($darkPrimaryColor, 25%)
$tableRowBorderColor = #ddd
$tableBorderedColor = #ccc
$tableStripedOddColor = #fafafa
$tableStripedEvenColor = #f5f5f5
$tableStripedRowDivider = #fff

// FLASH MESSAGES
$flashMessageColor = $textOnColor
$flashBgColorNotice = #0074d9
$flashBgColorError = $failColor
$flashBgColorWarning = #f39c12
$flashBgColorSuccess = $passColor

// IMAGE CARDS
$imageCardWidth = 12rem
$imageCardHeight = 9rem
$imageCardIconColor = #eee
$imageCardBackBgColor = #aaa
$imageCardToggleBgColor = rgba(255,255,255,.5)
$imageCardToggleBgColorHover = rgba(255,255,255,1)

// TOGGLE
$toggleSwitchHeight = 2rem
$toggleSwitchBgColor = #333
$toggleSwitchActiveBgColor = $accentColor
$toggleSwitchSpeed = 0.1s

// FORMS
$focusStyle = 0 0 .1rem rgba(81, 203, 238, 1)
$disabledBgColor = #ddd
$disabledColor = #fff
