h1, h2
  margin: 0
  font-size: 3rem
  text-transform: uppercase
  color: $yellowDark
  text-shadow: $yellow .35rem .25rem

label
  display: block
  font-size: .75rem
  text-transform: uppercase

input
  margin: 0 1rem

a, &:visited
  color: $text
  &:hover
    color: $yellowDark
    background-color: $yellow

button
  display: inline-block
  -webkit-appearance: none
  -moz-appearance: none
  appearance: none
  margin: 10px 0
  padding: 0
  border-width: 0
  font-family: sans-serif
  font-weight: normal
  font-size: inherit
  text-decoration: none
  cursor: pointer
  overflow: visible
  &::-moz-focus-inner
    border: 0
    padding: 0

.login-button, button
  background-color: $yellowDark
  color: $yellow !important
  box-shadow: $yellow 5px 5px
  display: inline-block
  padding: 0 1rem
  margin: 1rem
  text-decoration: none
  font-weight: bold
  text-transform: uppercase
  line-height: 3
  &:visited
    color: $yellowDark
  &:hover
    color: $yellow
    background-color: $yellowDark
    box-shadow: $yellow 5px 5px

.is-inline
  display: inline-block

.inline-list
  list-style: none
  li
    display: inline-block

.messaging
  padding: 1rem

.image-list
  padding: 0 1rem
  display: none
  list-style: none

.image-item
  display: inline-block
  margin: 1rem

.pf-image
  float: left
  border: 5px solid $imageBg
  margin: 0 10px
  height: 90px
  width: 90px

.set-image-kind
  list-style: none
  overflow: hidden
  width: 90px
  background-color: $imageBg
  margin: 0 10px
  text-align: left
  padding: 5px
  color: #000
  li:first-child
    float: left
  li:last-child
    float: right

.delete-image
  clear: both
  background-color: $imageBg
  padding: 5px
  margin: 0 10px 20px
  width: 90px
