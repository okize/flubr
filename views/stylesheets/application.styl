@import 'variables'
@import 'axis'

.app-body
  background-color: $bodyBgColor
  color: $bodyColor
  font-family: Verdana, Arial, sans-serif

.app-content
  padding: 2rem

.page-title
  margin: 0
  text-transform: uppercase

.messaging
  padding: 1rem

.avatar
  vertical-align: bottom
  border: 2px solid $borderColorOnDark
  height: 30px
  width: 30px

// USERS TABLE
.user-table
  font-size: .9rem
  $table(border = true, striped = true, condensed = false)

  .avatar
    border: 2px solid $borderColorOnLight

.col-avatar
  width: 1%
.col-name
  width: 20%
.col-username
  width: 14%
.col-dateAdded
  width: 40%
.col-deleteUser
  width: 25%

// IMAGES LIST
.image-list
  padding: 0
  margin: 0
  list-style: none

.image-item
  text-transform: uppercase
  font-size: 12px
  display: inline-block
  outline: 1px solid $imageBorderColor
  margin: 1rem

.image-item-pass
  border-top: 5px solid $pass

.image-item-fail
  border-top: 5px solid $fail

.pf-image
  float: left
  border: 5px solid $imageBg
  margin: 0 10px
  height: 90px
  width: 90px

.set-image-kind
  list-style: none
  overflow: hidden
  width: 90px
  background-color: $imageBg
  margin: 0 10px
  text-align: left
  padding: 5px
  color: #000
  li:first-child
    float: left
  li:last-child
    float: right

.delete-image
  clear: both
  background-color: $imageBg
  padding: 5px
  margin: 0 10px 10px
  text-align: center
  width: 90px