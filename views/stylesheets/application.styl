.app-body
  background: $appBodyBgColor
  color: $appBodyColor
  font-family: Verdana, Arial, sans-serif

.app-content
  padding: 2rem

.page-title
  line-height: 1
  font-size: 2.5rem
  margin: 0 0 2rem
  text-transform: capitalize

.avatar
  vertical-align: bottom
  border: 2px solid $borderColorOnDark
  height: 30px
  width: 30px

// ADD NEW IMAGE
.add-new-image
  button
    display: none

.pass-fail-toggle
  overflow: hidden
  legend
    display: none
  +from($medium-up)
    width: 10rem

// USERS LIST
.add-new-user
  margin: 0 0 2rem
  +from($medium-up)
    button
      display: none

.user-table .avatar
  border: 2px solid $borderColorOnLight

.col-avatar
  width: 1%
.col-name
  width: 25%
.col-username
  width: 14%
.col-dateAdded
  width: 35%
.col-deleteUser
  width: 25%

.button-delete
  background: red

// IMAGES LIST
.image-cards
  padding: 0
  margin: 0 -2rem 0 0
  list-style: none

.image-card
  background: $imageCardBgColor
  overflow: hidden
  text-transform: uppercase
  font-size: 12px
  display: inline-block
  outline: 1px solid $imageCardBorderColor
  margin: 0 2rem 2rem 0
  overflow: hidden
  a
    display: inline-block
    vertical-align: top

.image-card-pass
  border-bottom: .5rem solid $pass

.image-card-fail
  border-bottom: .5rem solid $fail

.image-thumbnail
  float: left
  border: .5rem solid $imageCardBgColor
  height: 100px
  width: 100px

.image-settings
  width: 100px
  border: .5rem solid $imageCardBgColor
  margin: 0
  display: inline-block
  list-style: none
  overflow: hidden
  text-align: left
  li
    text-align: right
    margin: 0 0 1rem
    &:last-child
      margin: 0

.change-image-kind

.delete-image
  clear: both
