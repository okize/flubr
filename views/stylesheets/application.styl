@import 'axis'
@import 'axis/buttons'

button
  text-transform: uppercase
  glossy-button($buttonBgColor, small, $buttonTextColor)
  &:disabled, &.button-disabled
    button-disabled()

a.button
  @extend button

label
  display: block
  font-size: .75rem
  text-transform: uppercase

input
  margin: 0 1rem

a, &:visited
  color: $text
  &:hover
    color: white
    background-color: $yellowDark

// // // // // // // // // // // // // // // // // // // //

.app-body
  background-color: $bodyBgColor
  color: $bodyColor
  font-family: Verdana, Arial, sans-serif

.app-content
  padding: 2rem

.page-title
  margin: 0
  text-transform: uppercase

.messaging
  padding: 1rem

.image-list
  padding: 0
  margin: 0
  list-style: none

.image-item
  text-transform: uppercase
  font-size: 12px
  border: 1px solid black
  display: inline-block
  margin: 1rem

.pf-image
  float: left
  border: 5px solid $imageBg
  margin: 0 10px
  height: 90px
  width: 90px

.set-image-kind
  list-style: none
  overflow: hidden
  width: 90px
  background-color: $imageBg
  margin: 0 10px
  text-align: left
  padding: 5px
  color: #000
  li:first-child
    float: left
  li:last-child
    float: right

.delete-image
  clear: both
  background-color: $imageBg
  padding: 5px
  margin: 0 10px 10px
  text-align: center
  width: 90px

.avatar
  vertical-align: bottom
  border: 2px solid $imageBg
  height: 30px
  width: 30px

.user-table
  font-size: .9rem
  $table(border = true, striped = true, condensed = false)

  td
    line-height: 2rem
