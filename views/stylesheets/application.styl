h1, h2, h3, h4, h5, h6
  font-family: $fontLight

.app-body
  background: $appBodyBgColor
  color: $appBodyColor
  font-family: $fontRegular

.app-content
  padding: 2rem

.page-title
  line-height: 1
  font-size: 2.5rem
  margin: 0 0 2rem
  text-transform: capitalize

// ADD NEW IMAGE
.add-new-image
  button
    display: none

.pass-fail-toggle
  overflow: hidden
  legend
    display: none
  +from($medium-up)
    width: 10rem

// USERS LIST
.add-new-user
  margin: 0 0 2rem
  button
    display: none

.user-table .avatar
  border: 2px solid #ccc
  vertical-align: bottom
  height: 3rem
  width: 3rem

.col-avatar
  width: 1%
.col-name
  width: 25%
.col-username
  width: 14%
.col-dateAdded
  width: 35%
.col-deleteUser
  width: 25%

.button-delete
  color: #999
  font-size: 2rem
  cursor: pointer

.button-icon
  border: none
  background: transparent
  padding: 0

.image-stats-graph
  margin: 0 0 2rem

.image-stats-bar
  display: inline-block
  line-height: 1.5
  color: white
  text-align: center

.image-stats-pass
  background-color: $pass

.image-stats-fail
  background-color: $fail

// IMAGES LIST
.image-cards
  padding: 0
  margin: 0 -2rem 0 0
  list-style: none

.image-card
  background: $imageCardBgColor
  overflow: hidden
  text-transform: uppercase
  display: inline-block
  outline: 1px solid $imageCardBorderColor
  margin: 0 2rem 2rem 0

.image-card-pass
  border-bottom: .25rem solid $pass

.image-card-fail
  border-bottom: .25rem solid $fail

.image-thumbnail
  a:focus &
    box-shadow: $focusStyle
  float: left
  margin: .5rem
  height: 10.5rem
  width: 10.5rem

button[disabled=disabled].is-pass
  .icon
    color: $pass !important

button[disabled=disabled].is-fail
  .icon
    color: $fail !important

.image-settings
  float: right
  width: 1.8rem
  font-size: 1.75rem
  margin: .75rem .75rem 0 .25rem
  padding: 0
  list-style: none
  li
    text-align: right
    margin: 0 0 1rem
    &:last-child
      margin: 0
  .icon
    color: #999