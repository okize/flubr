@import 'variables'

.app-body, .app-homepage
  min-height: 100vh
  width: 100%

+from($medium-up)
  .app-body, .app-wrapper
    display: flex
    flex-direction: column
  .app-wrapper
    flex-direction: row
    flex: 1
  .app-content
    flex: 1
  .app-navigation
    flex: 0 0 $navigationWidth
    order: -1