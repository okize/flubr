@import 'variables'

.app-body
  min-height: 100vh

.app-body, .app-wrapper
  display: flex
  flex-direction: column

.app-navigation
  order: -1

.app-homepage
  width: 800px
  margin: 0 auto

+from($medium-up)
  .app-wrapper
    flex-direction: row
    flex: 1
  .app-content
    flex: 1
  .app-navigation
    flex: 0 0 15rem
