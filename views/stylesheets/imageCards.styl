// IMAGES LIST

.image-cards
  padding: 0
  list-style: none
  display: flex
  flex-wrap: wrap
  flex-direction: row
  margin: -1rem // this is to remove the margin along the left & right of list

.image-card
  border-radius: 5px
  box-shadow: 5px 5px 15px rgba($navShadowColor, .25)
  position: relative
  flex: 1 1 auto
  margin: 1rem
  overflow: hidden
  height: $imageCardHeight
  min-width: $imageCardWidth

.image-card-front
  &:hover:not(.image-setting)
    .flip-card-indicator
      display: block

.image-card-back
  display: none
  height: 100%
  background-color: #aaa

.flip-card-indicator
  display: none
  cursor: pointer
  position: absolute
  top: ($imageCardHeight / 4)
  text-align: center
  width: 100%
  .icon
    font-size: 5rem
    color: rgba(0,0,0,.75)

.image-card-pass
  // border-top: .25rem solid $pass

.image-card-fail
  // border-top: .25rem solid $fail

.image-thumbnail
  cursor: pointer
  max-width: 100%
  max-height: 100%
  width: 100%
  height: 100%

.image-settings
  width: 100%
  top: ($imageCardHeight / 2)
  position: absolute
  font-size: 2rem
  margin: 0
  list-style: none

.image-setting
  cursor: default
  margin-top: -1.5rem
  background-color: $imageCardToggleBgColor
  padding: .5rem
  position: absolute
  &:hover
    background-color: $imageCardToggleBgColorHover
  &.set-pass
    border-radius: 0 1rem 1rem 0
    left: 0
  &.set-fail
    border-radius: 1rem 0 0 1rem
    right: 0
  .icon
    cursor: pointer
    color: #333

button[disabled=disabled].is-pass
  .icon
    color: $pass !important

button[disabled=disabled].is-fail
  .icon
    color: $fail !important

.image-metadata
  color: #fff
  font-size: .8rem
  margin: 0
  padding: 2rem 0 0 .5rem
