// IMAGES LIST

.image-cards
  padding: 0
  list-style: none
  display: flex
  flex-wrap: wrap
  flex-direction: row

.image-card
  background: $imageCardBgColor
  flex: 1 1 auto
  margin: 0 3% 3% 0

@media screen and (min-width: 769px) and (max-width: 895px)
  .image-card
    margin-right: 0

@media screen and (min-width: 896px) and (max-width: 1086px)
  .image-card:nth-child(2n)
    margin-right: 0

@media screen and (min-width: 1087px) and (max-width: 1279px)
  .image-card:nth-child(3n)
    margin-right: 0

@media screen and (min-width: 1280px) and (max-width: 1484px)
  .image-card:nth-child(4n)
    margin-right: 0

@media screen and (min-width: 1485px) and (max-width: 1705px)
  .image-card:nth-child(5n)
    margin-right: 0

@media screen and (min-width: 1706px)
  .image-card:nth-child(6n)
    margin-right: 0

.image-card-pass
  border-top: .25rem solid $pass

.image-card-fail
  border-top: .25rem solid $fail

.image-thumbnail
  a:focus &
    box-shadow: $focusStyle
  max-width: 100%
  min-width: 10rem
  max-height: 100%
  width: 100%
  height: 7rem

.image-settings
  display: flex
  font-size: 1.5rem
  margin: 0
  padding: .5rem 1rem
  list-style: none
  li
    flex: 1 0 auto
    &:nth-child(2)
      text-align: center
    &:nth-child(3)
      text-align: right
  .icon
    color: #999

button[disabled=disabled].is-pass
  .icon
    color: $pass !important

button[disabled=disabled].is-fail
  .icon
    color: $fail !important
