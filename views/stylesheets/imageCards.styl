// IMAGES LIST

.image-cards
  padding: 0
  list-style: none
  display: flex
  flex-wrap: wrap
  flex-direction: row
  margin: -1rem // this is to remove the margin along the left & right of list

.image-card
  border-radius: 5px
  box-shadow: 5px 5px 15px rgba($navShadowColor, .25)
  position: relative
  flex: 1 1 auto
  margin: 1rem
  overflow: hidden
  height: $imageCardHeight
  min-width: $imageCardWidth

.image-card-pass
  // border-top: .25rem solid $pass

.image-card-fail
  // border-top: .25rem solid $fail

.image-card
  &:hover
    .flip-card-overlay
      display: block

.image-card-front
  height: 100%

.flip-card-overlay
  display: none
  position: absolute
  cursor: pointer
  text-align: center
  background-color: rgba(0,0,0,.5)
  width: 100%
  height: 100%
  .icon
    position: relative
    top: ($imageCardHeight / 4)
    font-size: 5rem
    color: rgba(255,255,255,.75)

.image-thumbnail
  cursor: pointer
  max-width: 100%
  max-height: 100%
  width: 100%

.image-settings
  width: 100%
  top: ($imageCardHeight / 2)
  position: absolute
  font-size: 2rem
  margin: 0
  list-style: none

.image-setting
  cursor: default
  margin-top: -1.5rem
  padding: .5rem
  position: absolute
  &.set-pass
    left: 0
  &.set-fail
    right: 0
  .icon
    text-shadow: rgba(0,0,0,.25) 2px 2px
    cursor: pointer
    color: #eee

button[disabled=disabled].is-pass
  .icon
    color: $pass !important

button[disabled=disabled].is-fail
  .icon
    color: $fail !important

.image-card-back
  display: none
  height: 100%
  background-color: #aaa

.image-metadata
  color: #fff
  font-size: .75rem
  margin: 0
  padding: 0
  list-style: none
  padding: 1rem .5rem
  li
    margin-bottom: .5rem
