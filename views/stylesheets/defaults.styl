@import 'variables'
@import 'axis'
establish-baseline('normalize')

*,
*:before,
*:after
  box-sizing: border-box

button
  text-transform: uppercase
  glossy-button($buttonBgColor, medium, $buttonTextColor)
  &:disabled, &.button-disabled
    button-disabled()
  +from($medium-up)
    glossy-button($buttonBgColor, small, $buttonTextColor)

a.button
  @extend button

label
  display: block
  font-size: 1.25rem
  text-transform: uppercase
  +from($medium-up)
    font-size: .75rem

input
  width: 100%
  padding: .25rem .5rem
  // margin: 0 1rem

fieldset
  margin: 0
  padding: 0
  border: 0
