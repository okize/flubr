@import 'nib'
@import 'variables'

*,
*:before,
*:after
  box-sizing: border-box

html
  font-family: sans-serif
  -ms-text-size-adjust: 100%
  -webkit-text-size-adjust: 100%

body
  margin: 0

.app-body
  min-height: 100vh
  width: 100%
  font-family: $appFontFamily

.app-homepage
  min-height: 100vh
  text-align: center
  position: relative
  background: linear-gradient(top, $homepageBgColorTop, $homepageBgColorBottom)

.homepage-login-button
  a
    background: $homepageLoginButtonBgColor
    border-bottom: .2rem solid darken($homepageLoginButtonBgColor, 25%)
    text-transform: uppercase
    color: white
    text-decoration: none
    padding: .5rem 1rem
    border-radius: .25rem
    font-size: 1rem
    display: block
    width: $homepageImageWidth * .85
    margin: 1rem auto -.25rem
    +from($medium-up)
      font-size: .8rem
      display: inline-block
      width: auto

.homepage-mascot
  display: none
  top: 4rem
  position: absolute
  left: 50%
  margin-left: -9rem
  z-index: 1
  +from($medium-up)
    display: block

.homepage-logo
  //

.homepage-random-images
  position: relative
  overflow: hidden
  +from($medium-up)
    top: 10rem
    text-align: center
    margin: 1rem 0 0

.image-type-pass, .image-type-fail
  margin: 1rem auto 0
  border: 1px solid #999
  position: relative
  overflow: hidden
  width: $homepageImageWidth * .75
  height: $homepageImageHeight * .75
  img
    width: $homepageImageWidth * .75
    height: $homepageImageHeight * .75
  +from($medium-up)
    width: $homepageImageWidth
    height: $homepageImageHeight
    img
      width: $homepageImageWidth
      height: $homepageImageHeight
  h3
    margin: 0 0 0 .4rem
    opacity: .65
    position: absolute
    z-index: 1
    top: $homepageImageHeight * .25
    left: .25rem
    vertical-align: middle
    width:100%
    text-align: center
    font-size: 2.5rem
    text-transform: uppercase
    letter-spacing: 1.5rem
    text-shadow:
      -1px -1px 0 #fff,
      1px -1px 0 #fff,
      -1px 1px 0 #fff,
      1px 1px 0 #fff
  +from($medium-up)
    display: inline-block
    h3
      font-size: 3.5rem
      top: $homepageImageHeight * .3

.image-type-pass
  h3
    color: $pass
  +from($medium-up)
    margin: 0 4rem 0 0

.image-type-fail
  h3
    color: $fail
  +from($medium-up)
    margin: 0 0 0 4rem
