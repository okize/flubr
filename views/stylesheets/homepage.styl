@import 'variables'

.app-homepage
  text-align: center
  position: relative
  background: $homepageBgColorBottom linear-gradient(to bottom, $homepageBgColorTop, $homepageBgColorBottom) repeat-x

.homepage-logo
  color: $flubr
  text-shadow: $flubrDark .25rem .25rem
  font-size: 4.5rem
  margin: 0 1rem
  text-transform: uppercase
  +from($medium-up)
    font-size: 12rem

.homepage-random-images
  overflow: hidden
  +from($medium-up)
    text-align: center
    margin: 1rem 0 0

.image-type-pass, .image-type-fail
  margin: 1.5rem auto
  width: 18rem
  height: 12rem
  position: relative
  overflow: hidden
  img
    width: 18rem
    height: 12rem
  h3
    margin: 0 0 0 .4rem
    opacity: .65
    position: absolute
    z-index: 1
    top: 4rem
    left: 0
    vertical-align: middle
    width:100%
    text-align: center
    font-size: 3.5rem
    text-transform: uppercase
    letter-spacing: 1.5rem
    text-shadow:
      -1px -1px 0 #fff,
      1px -1px 0 #fff,
      -1px 1px 0 #fff,
      1px 1px 0 #fff
  +from($medium-up)
    display: inline-block
    margin: 1.5rem

.image-type-pass
  h3
    color: $pass

.image-type-fail
  h3
    color: $fail

.homepage-login-button
  a
    background-color: #4099FF
    text-transform: uppercase
    color: white
    text-decoration: none
    padding: .5rem 1rem
    border-radius: .25rem
    font-size: .8rem