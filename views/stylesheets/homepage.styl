$homepageImageWidth = 18rem
$homepageImageHeight = 12rem

.app-homepage
  text-align: center
  position: relative
  background: $homepageBgColorBottom linear-gradient(to bottom, $homepageBgColorTop, $homepageBgColorBottom) repeat-x

.homepage-logo
  color: $flubr
  text-shadow: $flubrDark .25rem .25rem
  font-size: 4.5rem
  margin: 0 1rem
  text-transform: uppercase
  +from($medium-up)
    font-size: 12rem

.homepage-login-button
  a
    background: #4099FF
    text-transform: uppercase
    color: white
    text-decoration: none
    padding: .5rem 1rem
    border-radius: .25rem
    font-size: 1rem
    display: block
    width: $homepageImageWidth * .85
    margin: .25rem auto
    +from($medium-up)
      font-size: .8rem
      display: inline-block
      width: auto

.homepage-random-images
  overflow: hidden
  +from($medium-up)
    text-align: center
    margin: 1rem 0 0

.image-type-pass, .image-type-fail
  width: $homepageImageWidth * .75
  height: $homepageImageHeight * .75
  img
    width: $homepageImageWidth * .75
    height: $homepageImageHeight * .75
  +from($medium-up)
    width: $homepageImageWidth
    height: $homepageImageHeight
    img
      width: $homepageImageWidth
      height: $homepageImageHeight

.image-type-pass, .image-type-fail
  border: 1px solid #999
  margin: 1rem auto 0
  position: relative
  overflow: hidden
  h3
    margin: 0 0 0 .4rem
    opacity: .65
    position: absolute
    z-index: 1
    top: $homepageImageHeight * .25
    left: .25rem
    vertical-align: middle
    width:100%
    text-align: center
    font-size: 2.5rem
    text-transform: uppercase
    letter-spacing: 1.5rem
    text-shadow:
      -1px -1px 0 #fff,
      1px -1px 0 #fff,
      -1px 1px 0 #fff,
      1px 1px 0 #fff
  +from($medium-up)
    display: inline-block
    margin: 1.5rem
    h3
      font-size: 3.5rem
      top: $homepageImageHeight * .3

.image-type-pass
  h3
    color: $pass

.image-type-fail
  h3
    color: $fail

